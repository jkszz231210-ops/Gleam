<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/app_intro"
            android:textColor="#B3FFFFFF"
            android:textSize="14sp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:cardBackgroundColor="#141414"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/section_camera"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/cameraToggle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    app:checkedButton="@id/btnCameraFront">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCameraBack"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checkable="true"
                        android:text="@string/camera_back_short"
                        android:textColor="@android:color/white"
                        app:strokeColor="#3AFFFFFF"
                        app:cornerRadius="14dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCameraFront"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checkable="true"
                        android:text="@string/camera_front_short"
                        android:textColor="@android:color/white"
                        app:strokeColor="#3AFFFFFF"
                        app:cornerRadius="14dp" />
                </com.google.android.material.button.MaterialButtonToggleGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/camera_help"
                    android:textColor="#99FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:cardBackgroundColor="#141414"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/section_orientation"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/orientationToggle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    app:checkedButton="@id/btnOrientAuto">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOrientAuto"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checkable="true"
                        android:text="@string/orient_auto_short"
                        android:textColor="@android:color/white"
                        app:strokeColor="#3AFFFFFF"
                        app:cornerRadius="14dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOrientPortrait"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checkable="true"
                        android:text="@string/orient_portrait_short"
                        android:textColor="@android:color/white"
                        app:strokeColor="#3AFFFFFF"
                        app:cornerRadius="14dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOrientLandscape"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checkable="true"
                        android:text="@string/orient_landscape_short"
                        android:textColor="@android:color/white"
                        app:strokeColor="#3AFFFFFF"
                        app:cornerRadius="14dp" />
                </com.google.android.material.button.MaterialButtonToggleGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/orient_help"
                    android:textColor="#99FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:cardBackgroundColor="#141414"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/section_reflection_tuning"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/reflectionCurveValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#B3FFFFFF"
                    android:textSize="13sp"
                    android:text="强度曲线：-" />

                <SeekBar
                    android:id="@+id/reflectionCurveSeek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:max="70" />

                <TextView
                    android:id="@+id/edgeEnhanceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="#B3FFFFFF"
                    android:textSize="13sp"
                    android:text="轮廓增强：-" />

                <SeekBar
                    android:id="@+id/edgeEnhanceSeek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:max="100" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#0F0F0F"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/footer_hint_title"
                    android:textColor="#B3FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/app_hint_tile"
                    android:textColor="#7AFFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/app_hint_kill_background"
                    android:textColor="#7AFFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>


